{
  "name": "handy-collapse",
  "version": "1.0.0",
  "description": "A pure Javascript module for accordion/collapse UI without JQuery",
  "main": "dist/index.js",
  "author": "R Sakai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sk-rt/handy-collapse.git"
  },
  "keywords": [
    "js",
    "vanillajs",
    "micro",
    "collapse",
    "accordion",
    "ui",
    "slidedown",
    "dropdown",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write 'src/**/*.ts'",
    "dev": "webpack-dev-server",
    "build": "NODE_ENV=production webpack -p",
    "dist": "npm run clean && NODE_ENV=production webpack -p && npm run build-declaration && npm run sample-dist",
    "build-declaration": "tsc src/index.ts -d --emitDeclarationOnly --declarationDir ./dist",
    "sample-dist": "cpx dist/standalone/* sample/js/",
    "clean": "rimraf dist",
    "prepare": "npm run dist",
    "publish": "npm publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {}
}
