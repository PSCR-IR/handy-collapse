{
  "name": "handy-collapse",
  "version": "0.1.4",
  "description": "A pure Javascript module for accordion/collapse UI without JQuery",
  "main": "dist/handy-collapse.js",
  "author": "R Sakai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sk-rt/handy-collapse.git"
  },
  "keywords": [
    "js",
    "vanillajs",
    "micro",
    "collapse",
    "accordion",
    "ui",
    "slidedown",
    "dropdown"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write 'src/**/*.ts'",
    "dev": "webpack-dev-server",
    "build":"NODE_ENV=production webpack -p",
    "dist": "npm run clean && NODE_ENV=production webpack -p && npm run build-declaration",
    "build-declaration": "tsc src/index.ts -d --emitDeclarationOnly --declarationDir ./dist",
    "clean": "rimraf dist",
    "prepare": "npm run dist",
    "publish": "npm publish"
  },
  "devDependencies": {
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.2",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {}
}
